!-- Xft settings -- 
Xft.antialias:	1
Xft.hinting:	1
Xft.autohint:	1
Xft.hintstyle:	hintslight
Xft.style:      Regular
Xft.rgba:       rgb
Xft.lcdfilter:	lcddefault

*.alpha: 1.0

! inner padding
*.borderpx: 15
*.font: Jetbrains Mono Nerd Font:style=Regular:size=14:autohint=true:antialias=true
*.font2: FontAwesome 6 Free:style=Regular:size=14:autohint=true:antialias=true

*.foreground:    #A9B1D6
*.background:    #1A1B26
*.cursorColor:   #A9B1D6
*.highlightColor:#3A3F4B

*.fading:                  40
*.fadeColor:               #1A1B26
*.pointerColorForeground:  #A9B1D6
*.pointerColorBackground:  #1A1B26

! Statusbar
*.bottom: "n"
*.bar: "polybar"

! Dmenu
dmenu.topbar: 0

! Default apps
apps.terminal: st

! Normal      Bright
! --------    -------
! 0 Black      8 Black
! 1 Red        9 Red
! 2 Yellow    10 Yellow
! 3 Green     11 Green
! 4 Blue      12 Blue
! 5 Magenta   13 Magenta
! 6 Cyan      14 Cyan
! 7 White     15 White
  
! Black
*.color0:        #1A1B26
*.color8:        #4E5173
  
! Red
*.color1:        #F7768E
*.color9:        #E06C75
  
! Green  
*.color2:        #9ECE6A
*.color10:       #98C379

! Yellow
*.color3:        #E0AF68
*.color11:       #D19A66

! Blue  
*.color4:        #7AA2F7
*.color12:       #61AFEF
  
! Magenta (pink, !green)  
*.color5:        #9A7ECC
*.color13:       #C678DD

! Cyan (blue + green)
*.color6:        #4ABAAF
*.color14:       #56B6C2
 
! White  
*.color7:        #ACB0D0
*.color15:       #ABB2BF
